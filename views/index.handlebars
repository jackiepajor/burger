<div class="container">

	<div class="row">
		<div class="center col-sm-12">
			<img src="assets/css/images/burger.jpeg" alt="Burger">
			<h1>EAT DA BURGER</h1>
		</div>
	</div>
	<hr><br>

	<div class="row text-center">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">DELICIOUS BURGERS</div>
				<div id="burgers-added" class="panel-body">

					<hr> {{#each burgers}} {{#unless devoured}}
					<form method="POST" action="/burgers/update/{{burger_id}}?_method=PUT" class="form-inline">
						<div class="form-group">
							<input type="hidden" name="devoured" value="1" />
							<label class="sr-only">Delicious burger</label>
							<p class="form-control-static">{{ burger_name }}</p>
						</div>
						<div class="row"></div>
						<button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">DEVOUR!</button>
						<hr>
					</form>
					{{/unless}} {{/each}}

				</div>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">DEVOURED BURGERS</div>
				<div id="burgers-devoured" class="panel-body">

					<hr> {{#each burgers}} {{#if devoured}}
					<form method="POST" action="/burgers/update/{{burger_id}}?_method=DELETE" class="form-inline">
						<div class="form-group">
							<label class="sr-only">Devoured burger</label>
							<p class="form-control-static">{{ burger_name }}</p>
						</div>
						<div class="row">
							<button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">DEVOURED!</button>
						</div>
						<hr>
					</form>
					{{/if}} {{/each}}

				</div>
			</div>
		</div>
	</div>
</div>


<!-- Row 2 -->
<div class="row">
	<!-- Centered Bottom Panel - Add a new Burger to the list -->
	<div class="center col-sm-12">
		<hr>
		<h2>Add A Burger</h2>
		<form class="create-update-form" action="/" method="POST">
			<div class="form-group">
				<p>Create a new burger and add it to the list!</p>
				<input type="text" id="ca" name="burger_name">
			</div>
			<!-- Submit Button - sends user input to database -->
			<button id="submitBtn" type="submit" class="btn btn-default">SUBMIT</button>
		</form>
	</div>
</div>
</div>